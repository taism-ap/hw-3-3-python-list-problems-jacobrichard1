# import the randint function from the random module
from random import randint

# create a function to generate a list of "size" random integers
# up to a maximum of "largest"

def random_list(largest,size):
  # create an empty list
  l = []
  # add a random number to the list the appropriate number of times
  for i in range(size):
    n = randint(0,largest-1)
    l.append(n)
  #print the list to check
  return(l)
#call the function
l = random_list(10,10)
print(l)
#create a function
def find_maximum(l):
  #set x equal to one less then the lowest possible integer in the list
  x = -1 
  #make the for loop as i in list l
  for i in l:
    #if any element is greater then x, x becomes the value of that element
    if i > x:
      x = i
    
  return x

print ("the largest value is:")
print (find_maximum(l))

